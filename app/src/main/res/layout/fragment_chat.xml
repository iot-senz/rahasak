                    android:scaleType="fitCenter"
                    android:padding="9dp"
                    android:baselineAlignBottom="false"
                    android:id="@+id/sendBtn"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/chat_message_btn" />

