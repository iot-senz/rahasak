    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#3498db">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:padding="5dp"
            android:id="@+id/text_messages_container"
            android:background="@color/android_grey">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/messages_list_view"
                android:padding="5dp"
                android:layout_gravity="top|bottom"
                android:background="#ecf0f1"></ListView>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_weight="0"
            android:background="@color/android_grey"
            android:paddingTop="0dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                android:background="@color/android_grey">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColorHint="@android:color/darker_gray"
                    android:textColor="@color/white"
                    android:hint="@string/enter_secret_here_hint"
                    android:padding="7dp"
                    android:id="@+id/text_message"
                    android:background="#000"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="3dp" />
                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:orientation="horizontal">

                            <!--<Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:background="@color/light_blue_card_theme"
                                android:layout_margin="3dp" />-->

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:src="@drawable/location_black"
                                android:background="@drawable/chat_message_btn_disabled"
                                android:layout_centerHorizontal="true"
                                android:adjustViewBounds="true"
                                android:layout_margin="3dp"
                                android:scaleType="centerInside"
                                android:padding="8dp"
                                android:id="@+id/getLocBtn"/>

                            <!--<Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:background="@color/light_blue_card_theme"
                                android:layout_margin="3dp" />-->

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:src="@drawable/camera_black"
                                android:background="@drawable/chat_message_btn"
                                android:layout_centerHorizontal="true"
                                android:adjustViewBounds="true"
                                android:layout_margin="3dp"
                                android:scaleType="centerInside"
                                android:padding="8dp"
                                android:id="@+id/getCamBtn"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5">

                            <!--<Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="3dp" />-->
                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/send_black"
                                android:layout_centerHorizontal="true"
                                android:adjustViewBounds="true"
                                android:layout_margin="3dp"
                                android:scaleType="centerInside"
                                android:padding="8dp"
                                android:baselineAlignBottom="false"
                                android:id="@+id/sendBtn"
                                android:background="@drawable/chat_message_btn" />

                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>
        </FrameLayout>


    </LinearLayout>

</FrameLayout>
